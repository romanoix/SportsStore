@using SportsStore.WebUI.HtmlHelpers @*bez linijki też działa ale wywala bład.*@ 
@model SportsStore.WebUI.Models.ProductListViewModel

@{
    ViewBag.Title = "Produkty";
}
@foreach (var p in Model.Products)
{<dir class="card card-body bg-light ">


    <h3>
        <strong>@p.Name</strong>
        <span class="float-right alert-light">@p.Price.ToString("c") </span>
    </h3>
    <span class="lead">@p.Description</span>


</dir>
}
<div>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x }))
</div>


